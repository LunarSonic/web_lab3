<hibernate-mapping package="web.entity">
    <class name="Point" table="points">
        <id name="id" type="java.lang.Long">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="x" type="float">
            <column name="coordinate_x"/>
        </property>
        <property name="y" type="float">
            <column name="coordinate_y"/>
        </property>
        <property name="r" type="float">
            <column name="radius"/>
        </property>
        <property name="hit" type="boolean">
            <column name="is_hit"/> </property>
        <property name="serverTime" type="string">
            <column name="server_time"/>
        </property>
        <property name="scriptTime" type="long">
            <column name="script_time"/>
        </property>
        <many-to-one name="user" class="web.entity.User" fetch="join">
            <column name="user_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>